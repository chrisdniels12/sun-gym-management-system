<h1>Trainer Management</h1>
<a href="{{basePath}}" class="back-link">Back to Home</a>

{{!-- Stats Section --}}
<div class="stats-section">
    <h2>Quick Statistics</h2>
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Total Trainers</h3>
            <p>{{stats.totalTrainers}}</p>
        </div>
        <div class="stat-card">
            <h3>Active Classes</h3>
            <p>{{stats.activeClasses}}</p>
        </div>
        <div class="stat-card">
            <h3>Available Trainers</h3>
            <p>{{stats.availableTrainers}}</p>
        </div>
        <div class="stat-card">
            <h3>Avg Class Load</h3>
            <p>{{stats.avgClassLoad}}</p>
        </div>
    </div>
</div>

{{!-- Add Trainer Form --}}
<div class="form-section">
    <h2>Add New Trainer</h2>
    <form id="addTrainer" method="POST">
        <div class="form-group">
            <label for="hireDate">Hire Date:</label>
            <input type="date" id="hireDate" name="hireDate" required>
        </div>
        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required>
        </div>
        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="phoneNumber">Phone:</label>
            <input type="tel" id="phoneNumber" name="phoneNumber">
        </div>
        <div class="form-group">
            <label for="specialization">Specialization:</label>
            <select id="specialization" name="specialization" required>
                <option value="Strength Training">Strength Training</option>
                <option value="Cardio">Cardio</option>
                <option value="Yoga">Yoga</option>
                <option value="CrossFit">CrossFit</option>
            </select>
        </div>
        <button type="submit">Add Trainer</button>
    </form>
</div>

{{!-- Trainers Table --}}
<div class="table-section">
    <h2>Current Trainers</h2>
    <table id="trainers-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Specialization</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each trainers}}
            <tr data-id="{{this.trainerID}}">
                <td>{{this.trainerID}}</td>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.phoneNumber}}</td>
                <td>{{this.specialization}}</td>
                <td>
                    <button onclick="editTrainer({{this.trainerID}})" class="edit-btn">Edit</button>
                    <button onclick="deleteTrainer({{this.trainerID}})" class="delete-btn" type="button">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{!-- Edit Trainer Modal --}}
<div id="edit-modal" class="modal">
    <div class="modal-content">
        <h2>Edit Trainer</h2>
        <form id="edit-trainer-form">
            <input type="hidden" id="edit-trainerID">
            <div class="form-group">
                <label for="edit-firstName">First Name:</label>
                <input type="text" id="edit-firstName" required>
            </div>
            <div class="form-group">
                <label for="edit-lastName">Last Name:</label>
                <input type="text" id="edit-lastName" required>
            </div>
            <div class="form-group">
                <label for="edit-email">Email:</label>
                <input type="email" id="edit-email" required>
            </div>
            <div class="form-group">
                <label for="edit-phone">Phone:</label>
                <input type="tel" id="edit-phone">
            </div>
            <div class="form-group">
                <label for="edit-specialization">Specialization:</label>
                <select id="edit-specialization" required>
                    <option value="Strength Training">Strength Training</option>
                    <option value="Cardio">Cardio</option>
                    <option value="Yoga">Yoga</option>
                    <option value="CrossFit">CrossFit</option>
                </select>
            </div>
            <button type="submit">Update Trainer</button>
            <button type="button" onclick="closeEditModal()">Cancel</button>
        </form>
    </div>
</div>

{{!-- Load JavaScript --}}
<script src="{{basePath}}/js/trainerOperations.js"></script>
