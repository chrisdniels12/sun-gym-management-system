<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Members - Sun Gym</title>
    <link rel="stylesheet" href="/css/members.css">
</head>

<body>
    <h1>Member Management</h1>
    <a href="/" class="back-link">Back to Home</a>

    {{!-- Stats Section --}}
    <div class="stats-section">
        <h2>Quick Stats</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Members</h3>
                <p id="totalMembers">{{stats.totalMembers}}</p>
            </div>
            <div class="stat-card">
                <h3>New This Month</h3>
                <p id="newMembers">{{stats.newMembers}}</p>
            </div>
        </div>
    </div>

    {{!-- Add Member Form --}}
    <div class="form-section">
        <h2>Add New Member</h2>
        <form id="addMemberForm">
            <div class="form-group">
                <label for="firstName">First Name:</label>
                <input type="text" id="firstName" name="firstName" required>
            </div>
            <div class="form-group">
                <label for="lastName">Last Name:</label>
                <input type="text" id="lastName" name="lastName" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="phoneNumber">Phone Number (optional):</label>
                <input type="text" id="phoneNumber" name="phoneNumber">
            </div>
            <div class="form-group">
                <label for="membershipType">Membership Type:</label>
                <select id="membershipType" name="membershipType" required>
                    <option value="Basic">Basic</option>
                    <option value="Premium">Premium</option>
                    <option value="VIP">VIP</option>
                </select>
            </div>
            <button type="submit">Add Member</button>
        </form>
    </div>

    {{!-- Members Table --}}
    <div class="table-section">
        <h2>Current Members</h2>
        <table id="membersTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Join Date</th>
                    <th>Membership</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each members}}
                <tr data-id="{{this.memberID}}">
                    <td>{{this.memberID}}</td>
                    <td>{{this.firstName}} {{this.lastName}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.joinDate}}</td>
                    <td>{{this.membershipType}}</td>
                    <td>
                        <button onclick="editMember({{this.memberID}})">Edit</button>
                        <button onclick="deleteMember({{this.memberID}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Load client-side JavaScript --}}
    <script src="/js/memberClient.js"></script>
</body>

</html>