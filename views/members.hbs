<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Members - Sun Gym</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Manage Members</h1>
    <a href="/">Back to Home</a>

    <!-- Statistics Section -->
    <div class="stats-section">
        <h2>Membership Statistics</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Total Members</h3>
                <p>{{stats.totalMembers}}</p>
            </div>
            <div class="stat-card">
                <h3>Active Members</h3>
                <p>{{stats.activeMembers}}</p>
            </div>
            <div class="stat-card">
                <h3>Basic Members</h3>
                <p>{{stats.membersByType.Basic}}</p>
            </div>
            <div class="stat-card">
                <h3>Premium Members</h3>
                <p>{{stats.membersByType.Premium}}</p>
            </div>
            <div class="stat-card">
                <h3>VIP Members</h3>
                <p>{{stats.membersByType.VIP}}</p>
            </div>
        </div>
    </div>

<!-- Search/Filter Section -->
    <div class="search-section">
        <h2>Search/Filter Members</h2>
        <div class="form-field">
            <label for="nameFilter">Search by Name:</label>
            <input type="text" id="nameFilter" placeholder="Enter name...">
        </div>
        <div class="form-field">
            <label for="typeFilter">Filter by Membership:</label>
            <select id="typeFilter">
                <option value="">All Types</option>
                <option value="Basic">Basic</option>
                <option value="Premium">Premium</option>
                <option value="VIP">VIP</option>
            </select>
        </div>
        <div class="form-field">
            <label for="dateFilter">Filter by Join Date:</label>
            <input type="date" id="dateFilter">
        </div>
    </div>

<!-- Members Table -->
    <div class="form-section">
        <h2>Members List</h2>
        <table>
            <thead>
                <tr>
                    <th>Member ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Join Date</th>
                    <th>Membership Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each members}}
                <tr>
                    <td>{{this.memberID}}</td>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.email}}</td>
                    <td>{{this.phoneNumber}}</td>
                    <td>{{this.joinDate}}</td>
                    <td>{{this.membershipType}}</td>
                    <td>
                        <button onclick="editMember({{this.memberID}})">Edit</button>
                        <button onclick="deleteMember({{this.memberID}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="loading">Loading...</div>
    </div>

<!-- Add Member Form -->
    <div class="form-section">
        <h2>Add Member</h2>
        <form id="addMember">
            <div class="form-field">
                <label for="firstName">First Name:</label>
                <input type="text" name="firstName" required>
            </div>
            <div class="form-field">
                <label for="lastName">Last Name:</label>
                <input type="text" name="lastName" required>
            </div>
            <div class="form-field">
                <label for="email">Email:</label>
                <input type="email" name="email" required>
            </div>
            <div class="form-field">
                <label for="phoneNumber">Phone Number (optional):</label>
                <input type="text" name="phoneNumber">
            </div>
            <div class="form-field">
                <label for="membershipType">Membership Type:</label>
                <select name="membershipType" required>
                    <option value="Basic">Basic</option>
                    <option value="Premium">Premium</option>
                    <option value="VIP">VIP</option>
                </select>
            </div>
            <button type="submit">Add Member</button>
        </form>
    </div>

 <!-- Edit Member Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <h2>Edit Member</h2>
            <form id="editMemberForm" onsubmit="updateMember(event)">
                <input type="hidden" id="editID" name="id">
                <div class="form-field">
                    <label for="editFirstName">First Name:</label>
                    <input type="text" id="editFirstName" name="firstName" required>
                </div>
                <div class="form-field">
                    <label for="editLastName">Last Name:</label>
                    <input type="text" id="editLastName" name="lastName" required>
                </div>
                <div class="form-field">
                    <label for="editEmail">Email:</label>
                    <input type="email" id="editEmail" name="email" required>
                </div>
                <div class="form-field">
                    <label for="editPhone">Phone Number (optional):</label>
                    <input type="text" id="editPhone" name="phoneNumber">
                </div>
                <div class="form-field">
                    <label for="editMembershipType">Membership Type:</label>
                    <select id="editMembershipType" name="membershipType" required>
                        <option value="Basic">Basic</option>
                        <option value="Premium">Premium</option>
                        <option value="VIP">VIP</option>
                    </select>
                </div>
                <button type="submit">Update Member</button>
                <button type="button" onclick="closeModal()">Cancel</button>
            </form>
        </div>
    </div>

    <script src="/script.js"></script>
</body>
</html>