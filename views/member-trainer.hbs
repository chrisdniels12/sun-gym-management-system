<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="base-path" content="{{basePath}}">
    <title>Member-Trainer Assignments - Sun Gym</title>
    <link rel="stylesheet" href="{{basePath}}/css/member-trainer.css">
</head>
<body>
    <h1>Member-Trainer Management</h1>
    <a href="{{basePath}}" class="back-link">Back to Home</a>

    {{!-- Stats Section --}}
    <div class="stats-section">
        <h2>Training Statistics</h2>
        <div class="stats-grid">
            <div class="stat-card">
                <h3>Active Assignments</h3>
                <p>{{stats.activeAssignments}}</p>
            </div>
            <div class="stat-card">
                <h3>Members Training</h3>
                <p>{{stats.membersTraining}}</p>
            </div>
            <div class="stat-card">
                <h3>Busiest Trainer</h3>
                <p>{{stats.busiestTrainer}}</p>
            </div>
            <div class="stat-card">
                <h3>Avg Training Days</h3>
                <p>{{stats.avgTrainingDays}}</p>
            </div>
        </div>
    </div>

    {{!-- Add Assignment Form --}}
    <div class="form-section">
        <h2>Add New Training Assignment</h2>
        <form id="addMemberTrainer" method="POST">
            <div class="form-group">
                <label for="memberID">Member:</label>
                <select id="memberID" name="memberID" required>
                    <option value="">Select Member...</option>
                    {{#each members}}
                    <option value="{{this.memberID}}">{{this.firstName}} {{this.lastName}} - {{this.membershipType}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="trainerID">Trainer:</label>
                <select id="trainerID" name="trainerID" required>
                    <option value="">Select Trainer...</option>
                    {{#each trainers}}
                    <option value="{{this.trainerID}}">{{this.firstName}} {{this.lastName}} - {{this.specialization}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <label for="startDate">Start Date:</label>
                <input type="date" id="startDate" name="startDate" required>
            </div>
            <div class="form-group">
                <label for="endDate">End Date (Optional):</label>
                <input type="date" id="endDate" name="endDate">
            </div>
            <button type="submit">Add Assignment</button>
        </form>
    </div>

    {{!-- Assignments Table --}}
    <div class="table-section">
        <h2>Current Training Assignments</h2>
        <table id="assignments-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Member</th>
                    <th>Trainer</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each assignments}}
                <tr>
                    <td>{{this.memberTrainerID}}</td>
                    <td>{{this.memberName}}</td>
                    <td>{{this.trainerName}}</td>
                    <td>{{this.startDate}}</td>
                    <td>{{this.endDate}}</td>
                    <td>
                        <span class="status-badge status-{{toLowerCase this.status}}">
                            {{this.status}}
                        </span>
                    </td>
                    <td>
                        <button onclick="editAssignment({{this.memberTrainerID}})" class="edit-btn">Edit</button>
                        <button onclick="deleteAssignment({{this.memberTrainerID}})" class="delete-btn">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    {{!-- Edit Assignment Modal --}}
    <div id="edit-modal" class="modal">
        <div class="modal-content">
            <h2>Edit Training Assignment</h2>
            <form id="edit-assignment-form">
                <input type="hidden" id="edit-memberTrainerID">
                <div class="form-group">
                    <label for="edit-trainerID">Trainer:</label>
                    <select id="edit-trainerID" required>
                        {{#each trainers}}
                        <option value="{{this.trainerID}}">{{this.firstName}} {{this.lastName}} - {{this.specialization}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="edit-startDate">Start Date:</label>
                    <input type="date" id="edit-startDate" required>
                </div>
                <div class="form-group">
                    <label for="edit-endDate">End Date (Optional):</label>
                    <input type="date" id="edit-endDate">
                </div>
                <div class="button-group">
                    <button type="submit" class="update-btn">Update Assignment</button>
                    <button type="button" onclick="closeEditModal()" class="cancel-btn">Cancel</button>
                </div>
            </form>
        </div>
    </div>

    <script src="{{basePath}}/js/notifications.js"></script>
    <script src="{{basePath}}/js/memberTrainerOperations.js"></script>
</body>
</html>
