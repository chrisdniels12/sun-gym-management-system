<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sun Gym Management System</title>
    <link rel="stylesheet" href="{{basePath}}/css/index.css">
</head>
<body>
    <div class="hero">
        <h1>Sun Gym Management System</h1>
        <p class="subtitle">A modern solution for gym management</p>
    </div>

    <div class="content">
        <!-- Primary Tables Section -->
        <section class="section">
            <h2>Primary Tables</h2>
            <div class="grid">
                <a href="{{basePath}}/members" class="card">
                    <div class="card-icon">👥</div>
                    <h3>Members</h3>
                    <p>Manage member profiles and memberships</p>
                </a>
                <a href="{{basePath}}/trainers" class="card">
                    <div class="card-icon">💪</div>
                    <h3>Trainers</h3>
                    <p>Manage trainer profiles and specializations</p>
                </a>
                <a href="{{basePath}}/classes" class="card">
                    <div class="card-icon">🏋️</div>
                    <h3>Classes</h3>
                    <p>Schedule and manage fitness classes</p>
                </a>
                <a href="{{basePath}}/equipment" class="card">
                    <div class="card-icon">🎯</div>
                    <h3>Equipment</h3>
                    <p>Track gym equipment inventory</p>
                </a>
                <a href="{{basePath}}/payments" class="card">
                    <div class="card-icon">💰</div>
                    <h3>Payments</h3>
                    <p>Process and track member payments</p>
                </a>
            </div>
        </section>

        <!-- Relationship Management Section -->
        <section class="section">
            <h2>Relationship Management</h2>
            <div class="grid">
                <a href="{{basePath}}/member-equipment" class="card">
                    <div class="card-icon">🔄</div>
                    <h3>Member Equipment</h3>
                    <p>Track equipment usage by members</p>
                </a>
                <a href="{{basePath}}/class-bookings" class="card">
                    <div class="card-icon">📅</div>
                    <h3>Class Bookings</h3>
                    <p>Manage class enrollments</p>
                </a>
                <a href="{{basePath}}/member-trainer" class="card">
                    <div class="card-icon">🤝</div>
                    <h3>Member Trainer</h3>
                    <p>Assign trainers to members</p>
                </a>
                <a href="{{basePath}}/trainer-equipment" class="card">
                    <div class="card-icon">📋</div>
                    <h3>Trainer Equipment</h3>
                    <p>Manage trainer certifications</p>
                </a>
            </div>
        </section>
    </div>
</body>
</html>
